scroll-view{
  margin-bottom: 50rpx;
}

.list{
  border-top:1rpx solid #eee;
  margin-top:10rpx;
}

.list .item {
  background: #fff;
  padding: 10rpx 15rpx;
  height: 160rpx;
  border-bottom: 1rpx solid #eee;
  /*position: relative;*/

  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.list .item .image {
  width:150rpx;
  height:140rpx;
  margin-left:10rpx;
}

.list .item .image image{
  width:100%;
  height:100%;
}

.list .item .content {
  margin-left:10rpx;
  /*background-color: #f00;*/
  width: 280rpx;

  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
}

.list .item .content .h1{
  display: block;
  font-size: 30rpx;
  color:#666;
  margin-bottom: 30rpx;
  text-overflow: ellipsis;
  overflow: hidden;  
  white-space:nowrap; 
  height: 40rpx;
}
.list .item .content .p{
  display: block;
  font-size: 24rpx;
  color:#999;
}
.list .item .content .myp{
  font-size:28rpx;
  color: #ff533b;
}

.operate-area {
  width:160rpx;
  height:80rpx;
  position: absolute;
  right:20rpx;

  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.btn-image{
  width: 40rpx;
  height: 40rpx;
}

.operate-area .plus{
  width:40rpx;
  height:40rpx;
}

.operate-area .sum{
  width: 54rpx;
  height: 44rpx;
  border: 1rpx solid #DCE2EA;
  border-radius: 2rpx;
  z-index: 1;

  font-size: 28rpx;
  text-align: center;
}

.sum .count-input{
  padding: 0 2rpx;
  font-family: PingFang-SC-Regular;
  font-size: 26rpx;
  color: #000000;
  letter-spacing: 0;
}



.footer{
    background-color: #fff;
    border-top:1rpx solid #eee;
    width: 100%;
    position: fixed;
    left: 0;
    bottom: 0;
    right: 0;
}

.footer .right{
  float: right;
}

.footer .left{
  float: left;
}

.footer .left {
  line-height: 40px;
  font-size: 14px;
  padding-left:15px;
  color:#666;
}

.footer .left .span {
  color:#ff533b;
  padding-left:5px;
}

.footer .right button{
  height: 40px;
  background: #F5B223;
  border:none;
  border-radius: 0;
  line-height: 40px;
  color:#fff;
  padding:0 50px;
}

.wuge{
  text-align: center;
  font-size: 30rpx;
  color:#666;
  margin-top: 50rpx;
}