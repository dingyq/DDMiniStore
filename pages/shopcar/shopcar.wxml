<view>
      <scroll-view scroll-Y="true" scroll-X="false"> 
          <view class="wuge" wx:if="{{allGoods == '' || allGoods.length == 0}}">没有任何商品</view>
          <view wx:for="{{allGoods}}" wx:key="{{item.goodsId}}" class="list">
                <view class="item" >
                      <view class="image" bindtap="toDetail" data-id="{{item.goodsId}}">
                          <image src="{{item.thumbPicUrl}}"/>
                      </view>
                      <view class="content">
                          <text class="h1">{{item.goodsName}}</text>
                          <!--<text class="p">1个／不低于120斤</text>-->
                          <text class="p"></text>
                          <text class="p myp">¥{{item.discountPrice}}</text>
                      </view>
                      <view class="operate-area">
                          <view class="plus" catchtap="bindGoodsMinus" data-id="{{item.goodsId}}">
                              <image class="btn-image" src="../../images/goods_minus.png"/>
                          </view>
                          <view class="sum">
                              <input class="count-input" placeholder="" type="{{type}}" disabled="{{false}}" focus="{{false}}" maxlength="{{3}}" value="{{item.count}}" bindchange="{{bindInputChange}}" bindinput="{{bindInputing}}" bindfocus="{{bindInputFocus}}" bindblur="{{bindInputBlur}}"/>  
                          </view>
                          <view class="plus" catchtap="bindGoodsAdd" data-id="{{item.goodsId}}">
                              <image class="btn-image" src="../../images/goods_add.png"/>
                          </view>
                      </view>
                </view>
          </view>
      </scroll-view>
      <view class="footer" wx:if="{{sumPrice != 0}}">
          <view class="left">
                <text class="p">总价:</text>
                <text class="span">¥ {{sumPrice}}</text>
          </view>
          <view class="right">
                <button bindtap="settlement">去结算</button>
          </view>
      </view>
</view>
